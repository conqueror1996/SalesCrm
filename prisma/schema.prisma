generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id         String    @id
  source     String    @default("IndiaMART")
  name       String
  phone      String?   @unique
  email      String?
  product    String?
  quantity   String?
  city       String?
  message    String?
  status     String    @default("NEW")
  receivedAt DateTime  @default(now())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime
  Message    Message[]
}

model Message {
  id                String   @id
  leadId            String
  content           String
  sender            String
  timestamp         DateTime @default(now())
  isRead            Boolean  @default(false)
  whatsappMessageId String?  @unique
  Lead              Lead     @relation(fields: [leadId], references: [id])
}

model Product {
  id           String   @id
  name         String
  category     String
  image        String?
  sellingRate  Float    @default(0)
  purchaseRate Float    @default(0)
  description  String?
  dimensions   String?
  stock        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime
}
